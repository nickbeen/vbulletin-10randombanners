			<hookname>global_start</hookname>
			<phpcode><![CDATA[if ($vbulletin->options['10rb_on'] == 1) {
	$banner[1] = $vbulletin->options['10rb_banner1'];
	$banner[2] = $vbulletin->options['10rb_banner2'];
	$banner[3] = $vbulletin->options['10rb_banner3'];
